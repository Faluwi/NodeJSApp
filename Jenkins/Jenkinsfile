appName = "hello-world"

pipeline {
    // Use the 'node' Jenkins agent image which is provided with OpenShift 
    agent {label 'nodejs'}
    stages {
        stage("Compiling") {
            steps {
              sh "npm install"   
            }
        }
        stage("Testing") {
            steps {
                sh "npm run lint"
            }
        }
        stage ("DockerBuild Helm/OC") {
            agent {
                kubernetes {
                    yaml '''
                        apiVersion: v1
                        kind: Pod
                        spec:
                            containers:
                            -  name: helm-slave
                               image: docker.io/faluwi/jenkins-helm-agent:v0.1
                               imagePullPolicy: IfNotPresent
                               command:
                               - cat
                               tty: true
                               resources:
                                   limits: {}
                                   requests:
                                       memory: "256Mi"
                                       cpu: "100m"
                        '''
                }
            }
            steps {
              container ('helm-slave') {
                script {
                  openshift.withCluster() {
                      
                    //Create buildconfig for Docker Image
                    sh "helm upgrade --install testnodebuild ./helm/testBuild -n faluwi-dev --wait"
                      
                    //Building Docker Image and pushing to dockerhub  
                    openshift.selector("bc", "test-node-build").startBuild("-n 'faluwi-dev' --wait")
                  }//oc
                }//Script
              }//Container
            }//Steps
        }//stage
        stage ("Deployment"){
            agent {
                kubernetes {
                    yaml '''
                        apiVersion: v1
                        kind: Pod
                        spec:
                            containers:
                            -  name: helm-slave
                               image: docker.io/faluwi/jenkins-helm-agent:v0.1
                               imagePullPolicy: IfNotPresent
                               command:
                               - cat
                               tty: true
                               resources:
                                   limits: {}
                                   requests:
                                       memory: "256Mi"
                                       cpu: "100m"
                        '''
                }
            }
            steps {
              container('helm-slave') { 
                script {
                  openshift.withCluster() {
                    sh "helm upgrade --install testnodedeploy ./helm/testNode -n faluwi-dev --wait"
                  }
                }//Script
              }//Container
            }//Steps
        }//Stage
    }//Stages
}//Pipeline
